<mvc:View controllerName="recommendation.recom"
    xmlns="sap.m"
 	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
    displayBlock="true"
    height="100%"

>
	<App id="_IDGenApp1">
		 <Page id="page" >
			<content>
			<FlexBox id="_IDGenFlexBox1" items="{M1>/result}" direction="Column">
			<items>
			<FlexBox id="_IDGenFlexBox2" direction="Column">
				<items>
				<Table id="_IDGenTable1" items="{M1>Item}" inset="false" alternateRowColors="false" mode="MultiSelect"
				growing="true" growingScrollToLoad="false" growingThreshold="5" selectionChange="onSelection">

					<headerToolbar>
						<OverflowToolbar id="_IDGenOverflowToolbar1">
							<Title id="hitsTableHeaderTitle" text="{path:'M1>i2/ScreenedName'},{path:'M1>i2/ScreenedAddress'},{path:'M1>i2/ScreenedCountry'}"/>
							<ToolbarSpacer id="_IDGenToolbarSpacer1"/>  
							<Button id="idButton1" text="Submit Address Hits" type="Emphasized" press="onSubmitHits"></Button>
							<Button id="idButton2" text="Complete Item" type="Emphasized" press="onCompleteItem"></Button>
						</OverflowToolbar>
					</headerToolbar>

					<columns>
						<Column id="ScreeningNameColumn">
							<Text id="_IDGenText2" text="{parts:['i18n>Name',{path:'M1>i2/ScreenedName'}], formatter:'.columnTextWithLineBreak'}"/>
						</Column>

						<Column id="ScreeningAddressColumn">
							<Text id="_IDGenText3" text="{parts:['i18n>Address',{path:'M1>i2/ScreenedAddress'}], formatter:'.columnTextWithLineBreak'}" />
						</Column>

						<Column  id="ScreeningCountryColumn" >
							<Text id="_IDGenText4" text="{parts:['i18n>Country',{path:'M1>i2/ScreenedCountry'}], formatter:'.columnTextWithLineBreak'}" />
						</Column>

						<!-- <Column id="MatchColumn">
							<Text id="_IDGenText5" text="{parts:['i18n>Match'], formatter:'.columnTextWithLineBreak'}" />
						</Column> -->

						<Column id="ListClassificationColumn" >
							<Text id="_IDGenText6" text="{parts:['i18n>AIRecomm'], formatter:'.columnTextWithLineBreak'}" />
						</Column>

						<!-- <Column id="ScreeningListDetailsColumn">
							<Text id="_IDGenText7" text="{parts:['i18n>AIMatch'], formatter:'.columnTextWithLineBreak'}" />
						</Column> -->

						<Column id="ScreeningCloseReasonColumn">
							<Text id="_IDGenText8" text="{parts:['i18n>AIClsReason'], formatter:'.columnTextWithLineBreak'}" />
						</Column>

						<!-- <Column id="ScreeningAddInfoColumn">
							<Text id="_IDGenText9" text="{parts:['i18n>AddInfo'], formatter:'.columnTextWithLineBreak'}" />
						</Column> -->

						<Column id="StatusColumn">
							<Text id="_IDGenText18" text="{parts:['i18n>Status'], formatter:'.columnTextWithLineBreak'}" />
						</Column>

					    <Column id="FeedbackColumn">
							<Text id="_IDGenText19" text="{parts:['i18n>Feedback'], formatter:'.columnTextWithLineBreak'}" />
						</Column>

		                <Column id="DJNotesColumn">
							<Text id="_IDGenText20" text="{parts:['i18n>Feedback'], formatter:'.columnTextWithLineBreak'}" />
						</Column>
					</columns>
					<items>
						<ColumnListItem id="screeningHit">
							<cells>
								    <Text id="_IDGenText10"  text="{M1>HitName}"/>
                                    <Text id="_IDGenText11"  text="{M1>HitAddress}" />
                                    <Text id="_IDGenText12" text="{M1>HitCountryCode}" />
                                    <Text id="_IDGenText13" text="{M1>AI_Recommendation}" />
									<!-- <Text id="_IDGenText14" text="{path:'M1>AI_match_score', formatter: '.toPercentage' }" /> -->
									<Text id="_IDGenText15" text="{M1>AI_close_reason}" />
									<!-- <Text id="_IDGenText16" text="{M1>AI_additional_info}" /> -->
									<Text id="_IDGenText17" text="{M1>Status} " />
									<HBox id="_IDGenVBox1">
										<Button id="_IDGenButton1" icon="sap-icon://thumb-up" press="onLikePress"/>
										<Button id="_IDGenButton2" icon="sap-icon://thumb-down" press="onDislikePress" />
									</HBox>
							</cells>
						</ColumnListItem>
					</items>
				</Table>
					</items>
					</FlexBox>
				</items>
			</FlexBox>
			</content>
		</Page>
	</App>
</mvc:View>
